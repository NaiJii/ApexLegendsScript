int function RespawnNearSquad_GetRemainingRespawnsForPlayer( entity player )
{
	int numRespawnsForMode = GetStartingRespawnCount() 
	if ( numRespawnsForMode == -1 )
		return -1

	return player.GetPlayerNetInt( "respawnsRemaining" )

}




























































































































































































































































































































































































































































































































































































































































































